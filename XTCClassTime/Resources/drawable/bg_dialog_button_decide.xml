<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:height="40dp">
                <shape>
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="20dp" android:topLeftRadius="4dp" android:topRightRadius="20dp" />
                    <gradient android:angle="0" android:endColor="#FF8502" android:startColor="#ffFF7F27" android:type="linear" android:useLevel="true" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:height="40dp">
                <shape>
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="20dp" android:topLeftRadius="4dp" android:topRightRadius="20dp" />
                    <gradient android:angle="0" android:endColor="#FF8502" android:startColor="#FF7F27" android:type="linear" android:useLevel="true" />
                </shape>
            </item>
            <item android:height="40dp">
                <shape>
                    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="20dp" android:topLeftRadius="4dp" android:topRightRadius="20dp" />
                    <gradient android:angle="0" android:endColor="#b3000000" android:startColor="#b3000000" android:type="linear" android:useLevel="true" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
